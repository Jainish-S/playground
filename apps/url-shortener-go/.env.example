# Backend Environment Variables
# For local development, copy this to .env and fill in values

# Server
HOST=0.0.0.0
PORT=8000
BASE_URL=http://localhost:8000

# PostgreSQL (TimescaleDB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=urlshortener
POSTGRES_PASSWORD=localdev123
POSTGRES_DB=urlshortener

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Auth0 API Validation
# Get from Auth0 Dashboard → APIs → Your API
AUTH0_DOMAIN=YOUR_AUTH0_DOMAIN.auth0.com
AUTH0_AUDIENCE=https://YOUR_API_IDENTIFIER

# Cache TTLs (seconds)
URL_CACHE_TTL=3600
QR_CACHE_TTL=86400

# Rate Limits
RATE_LIMIT_CREATE_PER_MINUTE=10
RATE_LIMIT_REDIRECT_PER_SECOND=100

# Short Code
SHORT_CODE_MIN_LENGTH=6
DEFAULT_TTL_DAYS=365

# Security
IP_HASH_SALT=change-this-to-random-string
